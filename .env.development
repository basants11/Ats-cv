# Development Environment Configuration
# Copy this file to .env and fill in your actual values

# Project Settings
PROJECT_NAME="AI Fusion Core - Development"
VERSION="1.0.0-dev"
DEBUG=true
LOG_LEVEL=DEBUG
ENVIRONMENT=development

# Build Configuration
BUILD_TARGET=development

# Server Configuration
HOST=0.0.0.0
API_GATEWAY_PORT=8000
AI_KERNEL_HTTP_PORT=8001
AI_KERNEL_GRPC_PORT=50051

# Security Settings (use less strict settings for development)
SECRET_KEY=dev-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# CORS Settings (allow all for development)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000,http://localhost:8001,http://localhost:8002,http://localhost:8003,http://localhost:8004,http://localhost:8005,http://localhost:8006,http://localhost:8007,http://localhost:8008

# Trusted Hosts
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (Development)
DATABASE_URL=postgresql://postgres:password@localhost:5433/ai_fusion_core_dev

# Redis Configuration (Development)
REDIS_URL=redis://localhost:6380/0

# Vector Database (Development)
VECTOR_DB_TYPE=qdrant
VECTOR_DB_URL=http://localhost:6333

# AI API Keys (add your actual keys)
OPENAI_API_KEY=your-openai-api-key-here
PINECONE_API_KEY=your-pinecone-api-key-here

# File Upload Settings (Development)
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt,.jpg,.jpeg,.png

# Development Settings
HOT_RELOAD=true
RELOAD_DIRS=app,services

# Testing (Development)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5434/ai_fusion_core_test

# Monitoring (Development - optional)
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
JAEGER_URL=http://localhost:16686

# Logging (Development)
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/app.log

# Service Mesh (Development)
LINKERD_DASHBOARD_URL=http://localhost:8085

# External Services (uncomment and configure as needed)
# AWS_S3_BUCKET=your-dev-bucket
# SENDGRID_API_KEY=your-sendgrid-key
# STRIPE_PUBLIC_KEY=your-stripe-public-key