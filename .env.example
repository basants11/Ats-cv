# AI Fusion Core Environment Configuration

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Project metadata
PROJECT_NAME="AI Fusion Core"
VERSION="1.0.0"
DESCRIPTION="Microservices-based AI platform for ATS-friendly CV building"

# Server configuration
HOST="0.0.0.0"
PORT=8000
DEBUG=true
LOG_LEVEL="INFO"

# API configuration
API_V1_STR="/api/v1"
API_V2_STR="/api/v2"

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=11520
REFRESH_TOKEN_EXPIRE_DAYS=30

# Application secret key
SECRET_KEY="your-super-secret-key-change-this-in-production"

# Default user role for new registrations
DEFAULT_USER_ROLE="user"

# Superuser email (for initial admin setup)
SUPERUSER_EMAIL="admin@example.com"

# =============================================================================
# OAUTH2 CONFIGURATION
# =============================================================================

# Google OAuth2
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# GitHub OAuth2
GITHUB_CLIENT_ID="your-github-oauth-client-id"
GITHUB_CLIENT_SECRET="your-github-oauth-client-secret"

# OAuth2 URLs (usually don't need to change)
GOOGLE_AUTHORIZATION_URL="https://accounts.google.com/o/oauth2/auth"
GOOGLE_TOKEN_URL="https://oauth2.googleapis.com/token"
GOOGLE_USER_INFO_URL="https://www.googleapis.com/oauth2/v2/userinfo"
GITHUB_AUTHORIZATION_URL="https://github.com/login/oauth/authorize"
GITHUB_TOKEN_URL="https://github.com/login/oauth/access_token"
GITHUB_USER_INFO_URL="https://api.github.com/user"

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================

# Rate limiting
API_RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Security headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000

# GraphQL
GRAPHQL_ENABLED=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000"

# Comma-separated list of allowed hosts
ALLOWED_HOSTS="localhost,127.0.0.1"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database
DATABASE_URL="postgresql://user:password@localhost/cv_builder_db"

# MongoDB (alternative)
MONGODB_URL="mongodb://localhost:27017/cv_builder"

# =============================================================================
# REDIS CONFIGURATION (for caching and rate limiting)
# =============================================================================

REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# =============================================================================
# AI & ML SERVICES
# =============================================================================

# OpenAI API
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-3.5-turbo"

# =============================================================================
# CLOUD STORAGE
# =============================================================================

# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="your-cv-storage-bucket"

# Firebase (alternative)
FIREBASE_PROJECT_ID="your-firebase-project"
FIREBASE_STORAGE_BUCKET="your-firebase-bucket"

# =============================================================================
# MICROSERVICES CONFIGURATION
# =============================================================================

# AI Kernel Service
AI_KERNEL_HOST="localhost"
AI_KERNEL_GRPC_PORT=50051
AI_KERNEL_HTTP_PORT=8001

# Identity Service
IDENTITY_HOST="localhost"
IDENTITY_GRPC_PORT=50052
IDENTITY_HTTP_PORT=8002

# CV Engine Service
CV_ENGINE_HOST="localhost"
CV_ENGINE_GRPC_PORT=50053
CV_ENGINE_HTTP_PORT=8003

# Analytics Service
ANALYTICS_HOST="localhost"
ANALYTICS_GRPC_PORT=50055
ANALYTICS_HTTP_PORT=8005

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================

SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST="smtp.gmail.com"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAILS_FROM_EMAIL="noreply@yourdomain.com"
EMAILS_FROM_NAME="AI Fusion Core"

# =============================================================================
# VECTOR STORAGE
# =============================================================================

# Pinecone
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-east1-gcp"

# Weaviate
WEAVIATE_URL="http://localhost:8080"

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Structured logging
LOG_FORMAT="json"
LOG_LEVEL="INFO"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Hot reload for development
RELOAD=true

# Debug mode (enables GraphiQL, detailed logging)
DEBUG=true

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================

# PRODUCTION_HOST="0.0.0.0"
# PRODUCTION_PORT=8000
# DEBUG=false
# LOG_LEVEL="WARNING"
# API_RATE_LIMIT_ENABLED=true
# SECURITY_HEADERS_ENABLED=true
# BACKEND_CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
# ALLOWED_HOSTS="yourdomain.com,www.yourdomain.com"